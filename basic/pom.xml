<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.yvv.cq5</groupId>
    <artifactId>basic-archetype</artifactId>
    <version>1.0</version>
    <name>CQ5 Basic Archetype</name>
    <description>
        Promotes best practices of organizing typical Adobe CQ project structure.
        Generates sample CQ project based on Twitter Bootstrap. 
        Contains several profiles (Checkstyle/PMD/FindBugs) for executing local static code analysis and automatic SCA using Sonar QA platform.        
        Integrates with Cucumber. Contains sample unit tests (Powermock/Mockito - based).
    </description>

    <properties>
        <internal.maven.server>http://moo-nexus.wdf.sap.corp:8081</internal.maven.server> <!-- point this URL to your Nexus/Archiva server -->
    </properties>

    <!-- Tell Maven where artifacts can be downloaded from -->
    <repositories>
        <repository>
            <id>3rd-party.releases.adobe</id>
            <name>Adobe Basel Public Repository</name>
            <url>http://repo.adobe.com/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <!-- Tell Maven where plugins can be downloaded from -->
    <pluginRepositories>
        <pluginRepository>
            <id>3rd-party.releases.adobe</id>
            <name>Adobe Basel Public Repository</name>
            <url>http://repo.adobe.com/nexus/content/groups/public</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <!-- Tell Maven where releases and snapshots will be published -->
    <distributionManagement>
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <id>nexus-releases</id>
            <name>Nexus Releases</name>
            <url>${internal.maven.server}/nexus/content/repositories/wcms.releases/</url>
            <layout>default</layout>
        </repository>
        <snapshotRepository>
            <uniqueVersion>true</uniqueVersion>
            <id>nexus</id>
            <name>Nexus Snapshots</name>
            <url>${internal.maven.server}/nexus/content/repositories/wcms.snapshots/</url>
            <layout>default</layout>
        </snapshotRepository>
    </distributionManagement>
</project>